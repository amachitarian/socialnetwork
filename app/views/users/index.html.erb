<div class="container">
  <% @users.in_groups_of(3).each do |users|   %>
    <div class="row">
        <% users.compact.each do |u| %>
        <div class="col-md-1">
          <p>profile image</p>
        </div>
        <div class="col-md-3">
          <h3><%= link_to u.name, u %></h3>
          <p><%= link_to "Follow", follow_user_path(u), class: "btn btn-primary" %> </p>
          <p><%= link_to u.followers.count,"" , class: "label label-info" %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
