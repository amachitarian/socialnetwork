<div class="container">
  <% @users.in_groups_of(3).each do |users|   %>
    <div class="row">
        <% users.compact.each do |u| %>
        <div class="col-sm-2">
          <p><img src="http://placehold.it/200x200" class="img-responsive"></p>
        </div>
        <div class="col-sm-2">
          <h3><%= link_to u.name, u %></h3>
          <% if current_user.following?(u) %>
            <p><%= link_to "Unfollow", remove_follower_user_path(u), class: "btn btn-default follow unfollow", data: {user_id: u.id} %> </p>
          <% else %>
            <p><%= link_to "Follow", add_follower_user_path(u), class: "btn btn-warning follow", data: {user_id: u.id} %> </p>
          <% end %>
          <p>Followers: <%= link_to u.followers.count, user_path(u),id: "follow-count-" + u.id.to_s , class: "label label-warning"%></p>
          <p>Following: <%= link_to u.leaders.count, user_path(u),id: "leader-count-" + u.id.to_s , class: "label label-warning"%></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
