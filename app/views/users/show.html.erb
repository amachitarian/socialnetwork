<div class="row">
  <div class="col-sm-2">
      <p><img src="http://placehold.it/400x400" class="img-responsive"></p>
  </div>
  <div class="col-sm-8">
    <h2><%= @user.name %></h2>
    <p>Followers: <%= link_to @user.followers.count,"" ,id: "follow-count-" + @user.id.to_s , class: "label label-info"%>
       | Following: <%= link_to @user.leaders.count,"" ,id: "leader-count-" + @user.id.to_s , class: "label label-info"%></p>
    <p><%= link_to "Follow", add_follower_user_path(@user), class: "btn btn-info btn-sm follow", data: {user_id: @user.id}  %></p>

  </div>
</div>
<div class="row">
  <h3>Recent posts</h3>
  <% @posts.order("created_at desc").each do |post| %>
    <div class="col-sm-10 well">
      <p><%= post.body %></p>
    </div>
  <% end %>
</div>
