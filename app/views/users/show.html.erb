<div class="container">
<h1><%= @user.id %></h1>
<h2><%= @user.name %></h2>
<p><%= @user.followers.count %></p>

<%= form_for(current_user.me_following.build) do |f| %>
  <div><%= hidden_field_tag :followed_id, @user.id %></div>
  <div><%= hidden_field_tag :follower_id, current_user.id %></div>
  <%= f.submit "Follow", class: "btn btn-primary" %>
<% end %>

</div>
